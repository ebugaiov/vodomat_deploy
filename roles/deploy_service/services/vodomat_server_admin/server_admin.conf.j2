server {

    listen 80;
    listen [::]:80;

    location / {
        proxy_pass http://vodomat_server_admin:{{ server_admin_port }};
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

    location /static/ {
        root /opt/server_admin/;
    }

}